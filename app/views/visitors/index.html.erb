<h3>Welcome</h3>
<% if user_signed_in? %>
  <% if current_user.admin? %>
    <h3>Admin</h3>
    <p><%= link_to 'User count:', users_path %> <%= User.count %></p>
  <% else %>
    <h3>Welcome to GROUPIE HEAVEN</h3>
    <%= button_to queue_resque_path, method: :get, class: "btn btn-default" do %>
      <%= fa_icon 'instagram' %> New Instagram Bot
    <% end %>
  <% end %>
<% else %>
  <h3>Sign up join us in GROUPIE HEAVEN</h3>
  <%= link_to 'Sign up', new_user_registration_path, class: 'btn btn-primary btn-large' %>
<% end %>
